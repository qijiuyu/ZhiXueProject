<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/tv_feedback_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="反馈人:"
            android:textColor="@color/color_333333"
            android:textSize="15sp"/>
        
        <TextView
            android:id="@+id/tv_feedback_name"
            android:layout_toRightOf="@+id/tv_feedback_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_333333"
            android:textSize="15sp"/>
        
        <TextView
            android:id="@+id/tv_feedback_time"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:textSize="11sp"/>
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈来源:"
            android:textColor="@color/color_666666"
            android:textSize="12.5dp"/>
        
        <TextView
            android:id="@+id/tv_feedback_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_666666"
            android:textSize="12.5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已读:"
            android:textColor="@color/color_666666"
            android:textSize="12.5dp"/>

        <TextView
            android:id="@+id/tv_feedback_isRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_666666"
            android:textSize="12.5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话:"
            android:textColor="@color/color_666666"
            android:textSize="12.5dp"/>

        <TextView
            android:id="@+id/tv_feedback_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_666666"
            android:textSize="12.5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱:"
            android:textColor="@color/color_666666"
            android:textSize="12.5dp"/>

        <TextView
            android:id="@+id/tv_feedback_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_666666"
            android:textSize="12.5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈内容:"
            android:textColor="@color/color_666666"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_feedback_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_666666"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:layout_marginTop="15dp"
        style="@style/view_line"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@mipmap/bg_feedback_bottom"/>

</LinearLayout>