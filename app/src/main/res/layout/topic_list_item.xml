<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
        android:id="@+id/swipe_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentView="@+id/content"
        app:rightMenuView="@+id/menu_right">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include layout="@layout/topic_list_item_two" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/shade_line" />

            <TextView
                android:id="@+id/tv_menu_one"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:background="@color/color_ffffff"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/color_999999"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/shade_line" />

            <TextView
                android:id="@+id/tv_menu_two"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:background="@color/color_aaa"
                android:gravity="center"
                android:text="上架"
                android:textColor="@color/color_fd703e"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/shade_line" />

            <TextView
                android:id="@+id/tv_menu_three"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:background="@color/color_ffc1c1"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/color_ff212c"
                android:textSize="16sp" />

        </LinearLayout>

    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>
</LinearLayout>