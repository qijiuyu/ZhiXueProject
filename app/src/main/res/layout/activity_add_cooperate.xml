<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/head"/>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rel_aac1"
                android:layout_width="match_parent"
                android:layout_height="49dp">

                <TextView
                    android:id="@+id/tv_institution_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/institution_name"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/et_institution_name"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_institution_name"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:textSize="14sp"
                    android:textColor="@color/color_999999"
                    android:hint="请输入学院名称"
                    android:textColorHint="@color/color_999999"
                    android:maxLength="10"
                    android:gravity="right" />

            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_below="@id/rel_aac1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f0f0f0"/>

            <RelativeLayout
                android:layout_below="@id/view1"
                android:id="@+id/rl_add_topic"
                android:layout_width="match_parent"
                android:layout_height="49dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/topic_in"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_topic_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_arrow"/>

                <TextView
                    android:id="@+id/tv_topic_content"
                    android:layout_toLeftOf="@id/iv_topic_arrow"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_below="@id/rl_add_topic"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f0f0f0"/>

            <RelativeLayout
                android:layout_below="@id/view2"
                android:id="@+id/rl_choose_teacher"
                android:layout_width="match_parent"
                android:layout_height="49dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/publish_men"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_teacher_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_arrow"/>

                <TextView
                    android:id="@+id/tv_teacher_name"
                    android:layout_toLeftOf="@id/iv_teacher_arrow"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_below="@id/rl_choose_teacher"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f0f0f0"/>

            <RelativeLayout
                android:id="@+id/rel_aac2"
                android:layout_below="@id/view3"
                android:layout_width="match_parent"
                android:layout_height="49dp">

                <TextView
                    android:id="@+id/tv_purchase_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/purchase_period"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/et_purchase_period"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_purchase_period"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:textSize="14sp"
                    android:textColor="@color/color_999999"
                    android:hint="请输入月份数"
                    android:textColorHint="@color/color_999999"
                    android:inputType="datetime"
                    android:maxLength="10"
                    android:gravity="right"/>

            </RelativeLayout>

            <View
                android:layout_below="@id/rel_aac2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f0f0f0"/>

            <com.example.administrator.zhixueproject.view.ClickTextView
                android:id="@+id/tv_setting_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@mipmap/bg_botton"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/left_menu"
        android:layout_gravity="start"
        android:layout_width="283dp"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/id_left_menu"
            android:name="com.example.administrator.zhixueproject.fragment.college.TopicListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>