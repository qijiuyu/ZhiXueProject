<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_edit_college"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/head"/>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <RelativeLayout style="@style/release_common_rl">

                <ImageView
                    android:id="@+id/iv_college_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/college_name_iv" />

                <TextView
                    style="@style/release_common_tv"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_college_name"
                    android:text="学院名称" />

                <EditText
                    android:id="@+id/et_college_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:hint="学院名称"
                    android:maxLength="15"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_999999"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View style="@style/gray_line" />

            <RelativeLayout style="@style/release_common_rl">

                <ImageView
                    android:id="@+id/iv_registrant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/registrant_iv" />

                <TextView
                    style="@style/release_common_tv"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_registrant"
                    android:text="注册人" />

                <EditText
                    android:id="@+id/et_registrant"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:hint="注册人"
                    android:maxLength="15"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_999999"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View style="@style/gray_line" />

            <RelativeLayout style="@style/release_common_rl">

                <ImageView
                    android:id="@+id/iv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/bank_iv" />

                <TextView
                    style="@style/release_common_tv"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_bank_name"
                    android:text="修改开户行" />

                <EditText
                    android:id="@+id/et_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:hint="开户行"
                    android:maxLength="15"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_999999"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View style="@style/gray_line" />

            <RelativeLayout style="@style/release_common_rl">

                <ImageView
                    android:id="@+id/iv_card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/card_num_iv" />

                <TextView
                    style="@style/release_common_tv"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_card_number"
                    android:text="银行卡号" />

                <EditText
                    android:id="@+id/et_card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:hint="银行卡号"
                    android:inputType="number"
                    android:maxLength="15"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_999999"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View style="@style/gray_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:text="学院背景图"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/ll_selected_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_college_back_img"
                    android:scaleType="centerCrop"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="11dp"
                    android:src="@mipmap/uploading_iv"/>

            </LinearLayout>


            <View style="@style/gray_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:text="学院logo"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_college_logo"
                android:scaleType="centerCrop"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_margin="11dp"
                android:src="@mipmap/uploading_iv"/>


            <View style="@style/gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户学院比例"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/tv_seek_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_48c6ef"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/college_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/college_seek_bar"
                    android:thumb="@mipmap/college_ratio_iv" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="0"
                        android:textColor="@color/color_48c6ef"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="25"
                        android:textColor="@color/color_48c6ef"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="50"
                        android:textColor="@color/color_48c6ef"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="75"
                        android:textColor="@color/color_48c6ef"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="100"
                        android:textColor="@color/color_48c6ef"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学院"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="老师"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View style="@style/gray_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:text="入群设置"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/item_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:button="@null"
                    android:drawableLeft="@drawable/group_tab"
                    android:drawablePadding="6dp"
                    android:text="设为私密"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/item_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="68dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/group_tab"
                    android:drawablePadding="6dp"
                    android:text="开放入群"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/item_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/group_tab"
                    android:drawablePadding="6dp"
                    android:text="付费入群"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_aec_money"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_FFA287"
                    android:textSize="14sp"
                    android:layout_gravity="center"/>

                <RadioButton
                    android:id="@+id/item_option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/group_tab"
                    android:drawablePadding="6dp"
                    android:text="审核入群"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/gray_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="19dp"
                android:text="学院欢迎语"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_welcome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:padding="5dp"
                android:minLines="3"
                android:layout_margin="11dp"
                android:background="@null"
                android:hint="编辑学院欢迎语"
                android:maxLength="500"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_999999"
                android:textSize="14sp" />

            <View style="@style/gray_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="19dp"
                android:text="学院简介"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_address_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:padding="5dp"
                    android:minLines="7"
                    android:layout_margin="11dp"
                    android:background="@null"
                    android:hint="编辑学院简介"
                    android:maxLength="500"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_details_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:textSize="13sp"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <View style="@style/gray_line" />

            <com.example.administrator.zhixueproject.view.ClickTextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:layout_marginTop="41dp"
                android:background="@mipmap/bg_botton"
                android:gravity="center"
                android:text="提交"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <com.example.administrator.zhixueproject.view.ClickTextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="31dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="返回"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>