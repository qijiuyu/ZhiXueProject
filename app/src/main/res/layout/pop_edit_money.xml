<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_36000000"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="150dp"
        android:background="@drawable/menu_pop_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="19dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_pem_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:padding="5dp"
                android:background="@null"
                android:hint="请输入付费金额"
                android:maxLength="3"
                android:inputType="phone"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_999999"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pem_submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blue_bt_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_pem_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_48c6ef"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>