<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_back"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#90000000" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/btn_pop_set_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/color_000000"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_pop_set_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_popset_btn"
            android:padding="10dp"
            android:textColor="@color/color_000000" />

        <Button
            android:id="@+id/btn_pop_set_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_popset_btn"
            android:padding="10dp"
            android:textColor="@color/color_000000" />

        <Button
            android:id="@+id/btn_pop_set_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_popset_btn"
            android:padding="10dp"
            android:textColor="@color/color_000000" />

        <Button
            android:id="@+id/btn_pop_set_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_popset_btn"
            android:padding="10dp"
            android:textColor="@color/color_000000" />

        <Button
            android:id="@+id/btn_pop_set_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_popset_btn2"
            android:padding="@dimen/dm020"
            android:textColor="@color/color_000000" />
    </LinearLayout>

</RelativeLayout>