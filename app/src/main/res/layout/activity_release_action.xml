<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_add_action"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    style="@style/release_common_rl">

                    <TextView
                        style="@style/release_common_tv"
                        android:text="添加标题"/>

                    <EditText
                        android:id="@+id/tv_title_action"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="请输入标题"
                        android:maxLength="15"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/color_999999"
                        android:textSize="15sp"/>
                </RelativeLayout>

                <View style="@style/gray_line"/>

                <RelativeLayout
                    android:id="@+id/rl_stick"
                    style="@style/release_common_rl">

                    <TextView
                        style="@style/release_common_tv"
                        android:text="是否置顶"/>

                    <com.example.administrator.zhixueproject.view.SwitchButton
                        android:id="@+id/sb_stick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:sb_checked="true"
                        app:sb_checked_color="@color/color_fd703e"
                        app:sb_show_indicator="false"/>

                </RelativeLayout>

                <View style="@style/gray_line"/>

                <RelativeLayout
                    android:id="@+id/rl_topic"
                    style="@style/release_common_rl">

                    <TextView
                        style="@style/release_common_tv"
                        android:text="话题"/>

                    <ImageView
                        android:id="@+id/iv_right_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_arrow"/>

                    <TextView
                        android:id="@+id/tv_topic"
                        style="@style/release_common_tv_show"
                        android:layout_toLeftOf="@+id/iv_right_topic"/>


                </RelativeLayout>

                <View style="@style/gray_line"/>

                <RelativeLayout
                    android:id="@+id/rl_issuer"
                    style="@style/release_common_rl">

                    <TextView
                        style="@style/release_common_tv"
                        android:text="发布人"/>

                    <ImageView
                        android:id="@+id/iv_right_issuer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_arrow"/>

                    <TextView
                        android:id="@+id/tv_issuer"
                        style="@style/release_common_tv_show"
                        android:layout_toLeftOf="@+id/iv_right_issuer"/>


                </RelativeLayout>

                <View style="@style/gray_line"/>

                <RelativeLayout
                    android:id="@+id/rl_action_type"
                    style="@style/release_common_rl">

                    <TextView
                        style="@style/release_common_tv"
                        android:text="活动类型"/>

                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_arrow"/>

                    <TextView
                        android:id="@+id/tv_topic_type"
                        style="@style/release_common_tv_show"
                        android:layout_toLeftOf="@+id/iv_right"/>

                </RelativeLayout>

                <View style="@style/gray_line"/>

                <RelativeLayout
                    android:id="@+id/rl_start_time"
                    style="@style/release_common_rl">

                    <TextView
                        style="@style/release_common_tv"
                        android:text="开始时间"/>

                    <ImageView
                        android:id="@+id/iv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_arrow"/>

                    <TextView
                        android:id="@+id/tv_start_time"
                        style="@style/release_common_tv_show"
                        android:layout_toLeftOf="@+id/iv_start_time"/>

                </RelativeLayout>

                <View style="@style/gray_line"/>

                <RelativeLayout
                    android:id="@+id/rl_end_time"
                    style="@style/release_common_rl">

                    <TextView
                        style="@style/release_common_tv"
                        android:text="结束时间"/>

                    <ImageView
                        android:id="@+id/iv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_arrow"/>

                    <TextView
                        android:id="@+id/tv_end_time"
                        style="@style/release_common_tv_show"
                        android:layout_toLeftOf="@+id/iv_end_time"/>

                </RelativeLayout>
                <View style="@style/gray_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textSize="15sp"
                        android:text="上传活动图片"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_333333"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:id="@+id/iv_add_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@mipmap/uploading_iv"/>
                </LinearLayout>

                <View style="@style/gray_line"/>


                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="39dp"
                    android:layout_marginRight="39dp"
                    android:layout_marginTop="106dp"
                    android:background="@mipmap/bg_botton"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp"/>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_topic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </ScrollView>

    <include layout="@layout/include_bottom"/>

</LinearLayout>