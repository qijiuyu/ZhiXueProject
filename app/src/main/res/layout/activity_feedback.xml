<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
    <include android:id="@+id/head" layout="@layout/head"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_marginBottom="48dp"
        android:layout_centerHorizontal="true">

        <include layout="@layout/listview"/>

    </LinearLayout>

    <com.example.administrator.zhixueproject.view.ClickTextView
        android:id="@+id/tv_feedback_platform"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_48c6ef"
        android:gravity="center"
        android:text="@string/feedback_platform"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>


    <LinearLayout
        android:id="@+id/lin"
        android:visibility="gone"
        android:layout_below="@id/head"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3f7f7f7">

    </LinearLayout>

</RelativeLayout>